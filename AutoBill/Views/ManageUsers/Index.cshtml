@model ManageUsersViewModel
@{
    ViewData["Title"] = "Manage Agents";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <section>
            <h4>Add new agent</h4>
            <hr />
            <div id="add-agent-error" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" id="Email" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="Password" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" id="ConfirmPassword" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" id="add-agent-button" class="btn btn-default">Add</button>
                @*<button type="button" id="delete-agent-button" asp class="btn btn-default">Delete</button>*@

                <a asp-action="Delete" asp-controller="ManageUsers" asp-route-email="Email">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </a>
            </div>
        </section>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <a asp-action="Index" asp-controller="Make">
            <input type="submit" value="List Car Make" class="btn btn-default" />
        </a>
    </div>
</div>

<h3>Administrators</h3>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Email</td>
        </tr>
    </thead>
    @foreach (var user in Model.Administrators)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
        </tr>
    }
</table>


<h3>Agents</h3>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Email</td>
        </tr>
    </thead>

    @foreach (var user in Model.Everyone)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
        </tr>
    }
</table>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


